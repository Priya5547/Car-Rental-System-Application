<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/nav">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/abc" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="  Car Name"
                android:textColorHint="#130c0c"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"/>
    </android.support.design.widget.TextInputLayout>
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:dropDownWidth="match_parent" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/rate"
                android:textColorHint="#160c0c"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="  500 rs.per hours"
                android:textSize="20dp" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioGroup
                    android:id="@+id/radiogrp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@id/text"
                        android:textColor="#120b0b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="  type"
                        android:textSize="20dp" />
                    <RadioButton
                        android:id="@+id/petrol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="Petrol"
                        android:buttonTint="@color/colorPrimary"
                        android:textColorHint="#ffffff"
                        android:textColor="#0e0808"
                        android:textSize="20dp" />
                    <RadioButton
                        android:id="@+id/diesel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:buttonTint="@color/colorPrimary"
                        android:textColor="#130b0b"
                        android:text="Disel"
                        android:textSize="20dp" />
                </RadioGroup>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:textColorHint="#1d1212"
                android:hint="enter address"
                android:inputType="textPersonName"
                android:textSize="20dp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="#1a1010"
                android:layout_marginTop="5dp"
                android:hint="enter Pincode"
                android:textSize="20dp"/>
            </android.support.design.widget.TextInputLayout>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/city"
                android:textColor="#ffffff">
            </Spinner>
            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"
                android:text="SUBMIT" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>